<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/framelayout">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/regiImageHeight"
        android:layout_gravity="center"
        android:background="@drawable/regist1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/regiTableMarginLeft"
        android:layout_marginRight="@dimen/regiTableMarginRight"
        android:layout_marginTop="@dimen/regiTableMarginTop"
        android:gravity="center_horizontal">

        <TableRow>

            <TextView
                android:id="@+id/owner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/regiOwnerTableTop"
                android:text="김가연"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/resident"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/regiResidentTop"
                android:text="960708-2222222"
                android:textSize="@dimen/textSizeSmall" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/regiPhoneTableLeft"
                android:paddingTop="@dimen/regiOwnerTableTop"
                android:text="010-4491-0778"
                android:textSize="@dimen/textSizeMid" />

        </TableRow>

        <TableRow android:layout_marginTop="@dimen/regiTableAddrTop">

            <TextView
                android:id="@+id/resAddr"
                android:layout_width="0dp"
                android:layout_height="@dimen/regiTableAddrHeight"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="대전 광역시 유성구 궁동 425-3번지 승현빌 202호"
                android:textSize="@dimen/textSizeSmall" />

            <TextView
                android:id="@+id/nowAddr"
                android:layout_width="0dp"
                android:layout_height="@dimen/regiTableAddrHeight"
                android:layout_marginLeft="@dimen/regiTableAddrLeft"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="대전 광역시 유성구 궁동 425-3번지 승현빌 202호"
                android:textSize="@dimen/textSizeSmall" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/regiAnimalTableHeight"
        android:layout_marginLeft="@dimen/regiAnimalTableLeft"
        android:layout_marginRight="@dimen/regiAnimalTableRight"
        android:layout_marginTop="@dimen/regiAnimalTableTop"
        android:gravity="center">

        <TableRow>

            <TextView
                android:id="@+id/animal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="뿡이"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/variety"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="시츄"
                android:textSize="@dimen/textSizeSmall" />

            <TextView
                android:id="@+id/furColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="흰갈"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/neutralization_o"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2.1"
                android:gravity="center"
                android:text="2008-04-04"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/acqDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center"
                android:text="2008-04-04"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/special"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="겁이 많아요"
                android:textSize="@dimen/textSizeSmall" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="@dimen/regiSignTableWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/regiSignTableBottom"
        android:layout_marginLeft="@dimen/regiSignTableLeft"
        android:layout_marginRight="@dimen/regiSignTableRight"
        android:gravity="center_horizontal">

        <TableRow>

            <TextView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2019"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="08"
                android:textSize="@dimen/textSizeMid" />

            <TextView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="03"
                android:textSize="@dimen/textSizeMid" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/owner_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/regiSignTablePaddingRight"
                android:paddingTop="@dimen/regiSignTablePaddingTop"
                android:text="김가연"
                android:textSize="@dimen/textSizeSmall" />

            <ImageView
                android:layout_width="@dimen/regiSignWidth"
                android:layout_height="@dimen/regiSignHeight"
                android:layout_marginTop= "@dimen/regiSignTop"
                android:layout_marginRight="@dimen/regiSignRight"
                android:background="@drawable/stamp"/>
        </TableRow>
    </TableLayout>

    <ImageButton
        android:layout_width="@dimen/regiPdf"
        android:layout_height="@dimen/regiPdf"
        android:id="@+id/pdf"
        android:background="@drawable/pdf"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/regiPdfMargin"/>

</FrameLayout>