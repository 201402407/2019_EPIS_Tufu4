<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBarHeight"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosansbold"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#2eb8ff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/join_back"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center">

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="병원 명"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/hospital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/join_input1"
                    android:paddingLeft="8dp"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="대표자 명"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/join_input1"
                    android:enabled="false"
                    android:paddingLeft="8dp"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="병원 연락처"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <EditText
                        android:id="@+id/number1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/join_input4"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:maxLength="3"
                        android:textColor="#5a5a5a"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="-"
                        android:textColor="#5a5a5a" />

                    <EditText
                        android:id="@+id/number2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/join_input4"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:maxLength="4"
                        android:textColor="#5a5a5a"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="-"
                        android:textColor="#5a5a5a" />

                    <EditText
                        android:id="@+id/number3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/join_input4"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:maxLength="4"
                        android:textColor="#5a5a5a"
                        android:textSize="12sp" />

                </LinearLayout>

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/next_one"
        android:layout_width="wrap_content"
        android:enabled="false"       android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:background="@drawable/join_nextoff" />

    <LinearLayout
        android:id="@+id/no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/join_no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="존재하지 않는 병원입니다."
            android:textColor="#818181"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/join_back"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center">

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="아이디"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/join_input1"
                        android:paddingLeft="8dp"
                        android:textColor="#5a5a5a"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/overlap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/join_overlapoff" />

                </LinearLayout>

            </TableRow>

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="비밀번호"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/pw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/join_input1"
                    android:enabled="false"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:paddingLeft="8dp"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow android:layout_margin="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="비밀번호"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/join_input3"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/pwCheck"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:paddingLeft="8dp"
                        android:textColor="#5a5a5a"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                </LinearLayout>


            </TableRow>
        </TableLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/next_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:enabled="false"
        android:layout_marginRight="25dp"
        android:background="@drawable/join_nextoff"
        android:visibility="gone" />


</LinearLayout>

