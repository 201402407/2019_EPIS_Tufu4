<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBarHeight"
        android:gravity="center"
        android:background="@color/colorGray"
        android:text="반려동물 등록 대행업체 찾기"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/searchBarMarginTop"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="@dimen/searchBarWidth"
            android:layout_height="@dimen/searchBarHeight"
            android:background="@drawable/border_radius"
            android:paddingLeft="10dp"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionSearch"
            android:fontFamily="@font/notosansbold"
            />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="@dimen/searchBtnWidth"
            android:layout_height="@dimen/searchBtnHeight"
            android:layout_alignRight="@+id/searchEditText"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/searchBtnMarginRight"
            android:layout_marginLeft="@dimen/searchBtnMarginLeft"
            android:background="@color/colorGray"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchOptLayoutHeight"
        android:layout_marginTop="@dimen/searchOptLayoutMarginTop"
        android:orientation="horizontal">

        <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/isSignUpApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어플등록"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple" />

        <TextView
            android:id="@+id/isSearchCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가까운 위치 순서"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/filterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/searchBtnMarginRight"
            android:layout_marginLeft="@dimen/searchBtnMarginLeft"
            android:background="@drawable/temp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="업체명"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="대표자명"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchListView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchRecycleViewHeight"
        >
    </android.support.v7.widget.RecyclerView>
    
    <android.support.design.widget.TabLayout
        android:id="@+id/listTablayout"
        android:layout_gravity="center"
        app:tabGravity="center"
        app:tabSelectedTextColor="@color/colorBlue"
        android:layout_marginTop="@dimen/searchTabViewMarginTop"
        android:layout_width="@dimen/searchTabViewWidth"
        android:layout_height="@dimen/searchTabViewHeight">


    </android.support.design.widget.TabLayout>
</LinearLayout>