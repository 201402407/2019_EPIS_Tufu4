<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_margin="20dp"
                android:background="@drawable/join_back"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="병원 명"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/hospital"
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:layout_weight="2"
                            android:background="@drawable/join_input1"
                            android:paddingLeft="8dp"
                            android:textColor="#5a5a5a"
                            android:textSize="9sp" />

                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="대표자 명"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:layout_weight="2"
                            android:background="@drawable/join_input1"
                            android:enabled="false"
                            android:paddingLeft="8dp"
                            android:textColor="#5a5a5a"
                            android:textSize="9sp" />

                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="병원 연락처"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <EditText
                                android:id="@+id/number1"
                                android:layout_width="0dp"
                                android:layout_height="23dp"
                                android:layout_weight="1"
                                android:background="@drawable/join_input4"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="numberSigned"
                                android:maxLength="3"
                                android:textColor="#5a5a5a"
                                android:textSize="9sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="-"
                                android:textColor="#5a5a5a" />

                            <EditText
                                android:id="@+id/number2"
                                android:layout_width="0dp"
                                android:layout_height="23dp"
                                android:layout_weight="1"
                                android:background="@drawable/join_input4"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="numberSigned"
                                android:maxLength="4"
                                android:textColor="#5a5a5a"
                                android:textSize="9sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="-"
                                android:textColor="#5a5a5a" />

                            <EditText
                                android:id="@+id/number3"
                                android:layout_width="0dp"
                                android:layout_height="23dp"
                                android:layout_weight="1"
                                android:background="@drawable/join_input4"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="numberSigned"
                                android:maxLength="4"
                                android:textColor="#5a5a5a"
                                android:textSize="9sp" />

                        </LinearLayout>

                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/next_one"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@drawable/join_nextoff"
                android:enabled="false" />

            <LinearLayout
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/join_no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="존재하지 않는 병원입니다."
                    android:textColor="#818181"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idpw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/join_back"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="아이디"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/id"
                                android:layout_width="0dp"
                                android:layout_height="23dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:background="@drawable/join_input1"
                                android:paddingLeft="8dp"
                                android:textColor="#5a5a5a"
                                android:textSize="9sp" />

                            <ImageView
                                android:id="@+id/overlap"
                                android:layout_width="43dp"
                                android:layout_height="23dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/join_overlapoff"
                                android:enabled="false" />

                        </LinearLayout>

                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="비밀번호"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/pw"
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:layout_weight="2"
                            android:background="@drawable/join_input1"
                            android:inputType="textPassword"
                            android:maxLength="10"
                            android:paddingLeft="8dp"
                            android:textColor="#5a5a5a"
                            android:textSize="9sp" />

                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="비밀번호"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:layout_weight="2"
                            android:background="@drawable/join_input3"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/pwCheck"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:background="@android:color/transparent"
                                android:inputType="textPassword"
                                android:maxLength="10"
                                android:paddingLeft="8dp"
                                android:textColor="#5a5a5a"
                                android:textSize="9sp" />

                            <ImageView
                                android:id="@+id/check"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="8dp" />

                        </LinearLayout>


                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="은행"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="2"
                            android:background="@drawable/join_input3"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/bank"
                                android:layout_width="0dp"
                                android:layout_height="23dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:paddingLeft="@dimen/joinTextPadding"
                                android:singleLine="true"
                                android:text="은행을 선택해 주세요."
                                android:textColor="#5a5a5a"
                                android:textSize="9sp" />

                            <ImageView
                                android:layout_width="@dimen/joinBankWidth"
                                android:layout_height="@dimen/joinBankHeight"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/joinCheckMargin"
                                android:layout_marginRight="@dimen/joinCheckMargin"
                                android:background="@drawable/community_down"
                                android:backgroundTint="#5a5a5a" />


                        </LinearLayout>

                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="예금주"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/account_name"
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:layout_weight="2"
                            android:background="@drawable/join_input1"
                            android:maxLength="10"
                            android:paddingLeft="@dimen/joinTextPadding"
                            android:textColor="#5a5a5a"
                            android:textSize="9sp" />

                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="계좌번호"
                            android:textColor="#5a5a5a"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/account"
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:layout_weight="2"
                            android:background="@drawable/join_input1"
                            android:hint="계좌번호(숫자만 입력)"
                            android:inputType="numberSigned"
                            android:maxLength="10"
                            android:paddingLeft="@dimen/joinTextPadding"
                            android:textColor="#5a5a5a"
                            android:textSize="9sp" />

                    </TableRow>


                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vowow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border_webview"
                    android:backgroundTint="#ececec"
                    android:padding="5dp">

                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#ececec"
                        android:gravity="center_vertical"></WebView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="*회원가입 약관에 동의합니다."
                        android:textSize="10dp" />

                    <CheckBox
                        android:id="@+id/isSignUpApp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/message_checkbox"
                        android:button="@null" />
                </LinearLayout>

            </LinearLayout>


            <ImageButton
                android:id="@+id/next_two"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/join_finishoff"
                android:enabled="false"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

