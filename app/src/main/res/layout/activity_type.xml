<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".TypeActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="반려동물 등록방법"
        android:textSize="18dp"
        android:textColor="#FF5D8D"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/innerTypeImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/typeImgHeight"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/type_shadow"
            app:srcCompat="@drawable/howto_innerbtn"
            />

        <ImageView
            android:id="@+id/outerTypeImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/typeImgHeight"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/type_shadow"
            app:srcCompat="@drawable/howto_outerbtn"
            />

        <ImageView
            android:id="@+id/idTagTypeImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/typeImgHeight"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/type_shadow"
            app:srcCompat="@drawable/howto_badgebtn"
            android:layout_marginBottom="50dp"
            />

    </LinearLayout>

</LinearLayout>