<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TypeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBarHeight"
        android:gravity="center"
        android:background="@color/colorGray"
        android:text="반려동물 등록방법"
        />

    <ImageView
        android:id="@+id/innerTypeImg"
        android:layout_width="@dimen/typeImgWidth"
        android:layout_height="@dimen/typeImgHeight"
        android:background="@color/colorBlue"
        />

    <ImageView
        android:id="@+id/outerTypeImg"
        android:layout_width="@dimen/typeImgWidth"
        android:layout_height="@dimen/typeImgHeight"
        android:background="@color/colorRed"
        />

    <ImageView
        android:id="@+id/idTagTypeImg"
        android:layout_width="@dimen/typeImgWidth"
        android:layout_height="@dimen/typeImgHeight"
        android:background="@color/colorPrimary"
        />

</LinearLayout>