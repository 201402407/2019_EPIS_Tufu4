<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="320dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".popup.MessagePopupActivity">

    <!-- Notice -->
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:textSize="15dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:text="만족도"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(별점을 눌러 평가해주세요)"
                android:textSize="10dp"
                android:textColor="@color/colorGray"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="20dp"
            >

            <FrameLayout
                android:id="@+id/startbox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/review_starbox"
                >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/starFirst"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.19"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/review_notcoloredstar"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0125"></View>

                    <ImageView
                        android:id="@+id/starSecond"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.19"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/review_notcoloredstar"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0125"></View>

                    <ImageView
                        android:id="@+id/starThird"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.19"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/review_notcoloredstar"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0125"></View>

                    <ImageView
                        android:id="@+id/starFourth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.19"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/review_notcoloredstar"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0125"></View>

                    <ImageView
                        android:id="@+id/starFifth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.19"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/review_notcoloredstar"
                        />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <TextView
            android:textSize="15dp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:text="병원 후기"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/edReviewContent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/review_contentbox"
            android:gravity="top"
            android:textSize="14dp"
            android:lineSpacingExtra="5dp"
            />
    </LinearLayout>

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/okBtn"
            android:text="완료"
            android:textSize="15dp"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="0.5"
            />

        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/cancelBtn"
            android:text="취소"
            android:textSize="15dp"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="0.5"
            />

    </LinearLayout>
</LinearLayout>